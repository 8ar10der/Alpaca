{
    "id": "com.jeffser.Alpaca",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "alpaca",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=all",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--filesystem=/sys/module/amdgpu:ro",
        "--env=LD_LIBRARY_PATH=/app/lib:/usr/lib/x86_64-linux-gnu/GL/default/lib:/usr/lib/x86_64-linux-gnu/openh264/extra:/usr/lib/sdk/llvm15/lib:/app/plugins/lib:/app/plugins/lib/ollama:/app/plugins/lib/ollama/rocm:/app/plugins/lib/ollama/rocm/rocblas/library",
        "--env=PATH=/app/bin:/usr/bin:/app/plugins/bin"
    ],
    "add-extensions": {
    	"com.jeffser.Alpaca.Plugins": {
    		"merge-dirs": "lib;bin",
    		"directory": "plugins",
    		"no-autodownload": true,
    		"autodelete": true,
    		"subdirectories": true
    	}
    },
    "cleanup-commands": [
	"mkdir ${FLATPAK_DEST}/plugins"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
	{
	    "name": "libportaudio",
	    "sources": [
	    	{
		    "type": "archive",
		    "url": "https://files.portaudio.com/archives/pa_stable_v190700_20210406.tgz",
		    "sha256": "47efbf42c77c19a05d22e627d42873e991ec0c1357219c0d74ce6a2948cb2def"
	    	}
	    ],
	    "cleanup": [
		"/include",
		"/lib/*.a",
		"/lib/*.la",
		"/lib/pkgconfig",
		"/man",
		"/share/aclocal",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig"
	    ]
	},
	{
            "name": "libspelling",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [ "-Ddocs=false", "-Dvapi=false" ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libspelling.git",
                    "tag": "0.4.7"
                }
            ]
        },
        {
            "name": "vte",
            "buildsystem": "meson",
            "config-opts": [ "-Ddocs=false", "-Dvapi=false"],
            "sources": [
            	{
		   "type": "archive",
		   "url": "https://gitlab.gnome.org/GNOME/vte/-/archive/0.78.0/vte-0.78.0.tar.gz",
		   "sha256": "82e19d11780fed4b66400f000829ce5ca113efbbfb7975815f26ed93e4c05f2d"
            	}
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
            	"-Ddocs=false",
            	"-Dtests=false",
            	"-Dvapi=false"
            ],
            "sources": [
            	{
		   "type": "git",
		   "url": "https://github.com/flatpak/libportal.git",
		   "tag": "0.9.1"
            	}
            ]
	},
	"python-requirements.json",
        {
            "name": "alpaca",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Jeffser/Alpaca.git",
                    "branch": "main"
                }
            ]
        }
    ]
}
